<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_weight="2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
             android:id="@+id/tvDate"
            android:layout_gravity="center" android:gravity="center" android:text="Date" android:layout_width="0dp"
              android:padding="2dp" android:layout_weight="1" android:layout_height="wrap_content" android:textStyle="bold"/>

    <TextView
            android:id="@+id/tvRate"
            android:layout_gravity="center" android:gravity="center" android:text="Rs." android:layout_width="0dp"
             android:padding="2dp" android:layout_weight="1" android:layout_height="wrap_content" android:textStyle="bold"/>


</LinearLayout>