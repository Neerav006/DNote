<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ManageProductsActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/manageProducts_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:titleTextColor="@color/white">

        <LinearLayout
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="right"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp">

            <ImageView
                    android:id="@+id/manageProducts_btn_addProduct"
                    android:src="@drawable/ic_add_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/manageProducts_recView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/manageProducts_tv_noProducts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="22sp"
                android:gravity="center"
                android:visibility="gone"
                android:text="No products added"/>

        <ProgressBar
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:id="@+id/manageProducts_progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>