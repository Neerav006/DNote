<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:weightSum="4"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <TextView android:padding="2dp" android:gravity="center" android:layout_width="0dp" android:layout_weight="1"
              android:layout_height="wrap_content" android:text="@string/product_name" android:textStyle="bold"/>
    <TextView android:padding="2dp" android:gravity="center" android:layout_width="0dp" android:layout_weight="1"
              android:layout_height="wrap_content" android:text="@string/rate" android:textStyle="bold"/>
    <TextView android:padding="2dp" android:gravity="center" android:layout_width="0dp" android:layout_weight="1"
              android:layout_height="wrap_content" android:text="@string/quantity" android:textStyle="bold"/>
    <TextView android:padding="2dp" android:gravity="center" android:layout_width="0dp" android:layout_weight="1"
              android:layout_height="wrap_content" android:text="@string/total" android:textStyle="bold"/>

</LinearLayout>